# AI Coaching Management System - Environment Configuration
# Copy this file to .env and fill in your actual values

# Application Configuration
APP_NAME="AI Coaching Management System"
APP_VERSION="1.0.0"
ENVIRONMENT="development"
DEBUG=true
HOST="127.0.0.1"
PORT=8000
RELOAD=true
WORKER_PROCESSES=1
LOG_LEVEL="INFO"
API_PREFIX="/api/v1"

# Supabase Database Configuration
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_ANON_KEY="your-anon-key-here"
SUPABASE_SERVICE_KEY="your-service-key-here"
SUPABASE_PASSWORD="your-database-password"
SUPABASE_MAX_CONNECTIONS=20
SUPABASE_CONNECTION_TIMEOUT=30

# AI/ML Configuration
AI_OPENAI_API_KEY="your-openai-api-key"
AI_ANTHROPIC_API_KEY="your-anthropic-api-key"  # Optional
AI_DEFAULT_MODEL="openai:gpt-4o"
AI_EMBEDDING_MODEL="text-embedding-ada-002"
AI_MAX_TOKENS=4096
AI_TEMPERATURE=0.7
AI_REQUEST_TIMEOUT=60
AI_RATE_LIMIT_RPM=3000

# Airtable Integration Configuration
AIRTABLE_API_KEY="your-airtable-api-key"
AIRTABLE_BASE_ID="appsdldIgkZ1fDzX2"  # secondBrainExec base
AIRTABLE_RATE_LIMIT_RPS=5
AIRTABLE_REQUEST_TIMEOUT=30
AIRTABLE_RETRY_ATTEMPTS=3

# Google/Gmail API Configuration
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_REDIRECT_URI="http://localhost:8000/auth/google/callback"
GOOGLE_WEBHOOK_ENDPOINT="/api/gmail-webhook"

# Security Configuration
SECURITY_JWT_SECRET_KEY="your-jwt-secret-key-change-in-production"
SECURITY_JWT_ALGORITHM="HS256"
SECURITY_JWT_EXPIRATION_HOURS=24
SECURITY_PASSWORD_HASH_ROUNDS=12
SECURITY_API_RATE_LIMIT=100
SECURITY_ENCRYPTION_KEY="your-encryption-key-32-characters"

# Feature Flags
FEATURE_ENABLE_AI_DRAFT_AUTO_SEND=false
FEATURE_ENABLE_SCHEDULE_AUTO_CONFIRM=false
FEATURE_ENABLE_PAYMENT_REMINDERS=true
FEATURE_ENABLE_ANALYTICS=true
FEATURE_ENABLE_WEBHOOKS=true

# Vector Database Configuration
VECTOR_SIMILARITY_THRESHOLD=0.7
VECTOR_MAX_RESULTS=10

# Batch Processing Configuration
BATCH_SIZE_EMAIL_PROCESSING=10
BATCH_PROCESSING_INTERVAL_SECONDS=30
MAX_RETRY_ATTEMPTS=3